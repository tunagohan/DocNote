<%= form_with(model: article, local: true) do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="row">
  <div class="col-md-12">
    <%= f.text_field :title,
                     placeholder: 'Title',
                     class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.text_field :tag_list,
                     placeholder: '日記, 個人メモ',
                     value: @article.tag_list.join(','),
                     class: "form-control" %>
  </div>


  <div class="col-md-12">
      <%= f.text_area :body,
                      placeholder: '日記, 個人メモ',
                      class: "form-control edit-content" %>
  </div>
</div>

<div class="row footer-area">
  <div class="col-md-12 button-area">
    <%= f.submit "投稿する", class: "btn btn-success pull-right" %>
    <%= link_to articles_path, class: "btn btn-mini btn-danger pull-left" do %>
      <i class="icon-trash icon-white"></i> 戻る
    <% end %>
  </div>
</div>
<% end %>
