<div class="row">
  <h1>New Article</h1>

  <%= bootstrap_form_for @article do |form| %>

    <div class="col-md-12">
      <%= form.text_field :title,
                          placeholder: 'Title',
                          id: :article_title,
                          class: "form-control" %>
    </div>

    <div class="col-md-12">
      <%= form.text_field :tag_list,
                          placeholder: 'tags[日記,個人メモ]',
                          value: @article.tag_list.join(','),
                          class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.text_area :body,
                          placeholder: 'Body',
                          class: "form-control edit-content" %>
    </div>

    <div class="col-md-6">
      <div class="form-control preview-content"></div>
    </div>

    <script type="text/javascript">
    $(function() {
      $(".edit-content").each(function () {
        $(this).bind('keyup', replaceMarkdown(this));
      });
      function replaceMarkdown(elm) {
        return function () {
          str = $(this).val();
          $(".preview-content").html(marked(str));
        }
      }
    });
    </script>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="col-md-12">
      <%= form.submit "投稿する", class: "btn btn-success pull-right" %>

      <%= link_to articles_path, class: "btn btn-mini btn-danger pull-left" do %>
        <i class="icon-trash icon-white"></i> 戻る
      <% end %>
    </div>

  <% end %>
</div>